<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="right"
    >
    <TextView
        android:id="@+id/roomTypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:text="غرفة ثنائية"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/swissra_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="500"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomTypeTV" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="ر.س/ليلة"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="13sp"
        app:layout_constraintRight_toLeftOf="@+id/priceTV"
        app:layout_constraintTop_toTopOf="@+id/priceTV" />

    <ImageView
        android:id="@+id/wifiImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceTV"
        app:srcCompat="@mipmap/wifi_signal" />

    <ImageView
        android:id="@+id/swimmingImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/wifiImageView"
        app:layout_constraintTop_toBottomOf="@+id/priceTV"
        app:srcCompat="@mipmap/swimming" />

    <ImageView
        android:id="@+id/mealsImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/swimmingImageView"
        app:layout_constraintTop_toBottomOf="@+id/priceTV"
        app:srcCompat="@mipmap/meal" />

    <ImageView
        android:id="@+id/weightImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/mealsImageView"
        app:layout_constraintTop_toBottomOf="@+id/priceTV"
        app:srcCompat="@mipmap/weights" />

    <ImageView
        android:id="@+id/parkingImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/weightImageView"
        app:layout_constraintTop_toBottomOf="@+id/priceTV"
        app:srcCompat="@mipmap/parking" />

    <View
        android:layout_width="2dp"
        android:layout_height="100dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toLeftOf="@id/view1"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/black"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27"
        android:background="@android:color/black"
        />

</android.support.constraint.ConstraintLayout>